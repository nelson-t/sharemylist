<script>
$(document).ready(function(){
  $("#b1").click(function(){
    $.ajax({
        url: 'https://api.spotify.com/v1/me/player',
        method: 'GET',
        headers: {
          'Content-Type' : 'application/json', 
          'Accept' : 'application/json', 
          'Authorization' : 'Bearer BQCwEXlet40-RIARtAeLoyihm40MA6up9z7ELXacHq2v7w3HYT7ticCQwjImyzMmF9FNqSsdXYYXj9ZG_U89Bu22GSLWNLHxdT37ZodHZfKh-MFk-6UHicygVnGcBHhxtm1zWRM2swHESOFtDHF6npPYMZ-qcRgm6P1fLZq2aeAtP0TsyF9W6Wm8o1nMABSX_l7p0GCCzlzzqkBOhFZvOCOGXUO6FUy9RXJWdzDZ5lk8hyknisf58SK49le3PeI7'
        },
       success: function(data){
           var textedJson = JSON.stringify(data, undefined, 4);
           $('#myTextarea').text(textedJson);
           $('#myTextarea2').text(data.item.name+ " from "+data.item.artists[0].name);
           $('#img1').attr("src", data.item.album.images[0].url);
       }
    });
  });

  $("#b2").click(function(){
    $.ajax({
        url: 'https://api.spotify.com/v1/me/player/next',
        method: 'POST',
        headers: {
          'Content-Type' : 'application/json', 
          'Accept' : 'application/json', 
          'Authorization' : 'Bearer BQCwEXlet40-RIARtAeLoyihm40MA6up9z7ELXacHq2v7w3HYT7ticCQwjImyzMmF9FNqSsdXYYXj9ZG_U89Bu22GSLWNLHxdT37ZodHZfKh-MFk-6UHicygVnGcBHhxtm1zWRM2swHESOFtDHF6npPYMZ-qcRgm6P1fLZq2aeAtP0TsyF9W6Wm8o1nMABSX_l7p0GCCzlzzqkBOhFZvOCOGXUO6FUy9RXJWdzDZ5lk8hyknisf58SK49le3PeI7'
        },
       success: function(result){
         $("#b1").click();
       }
    });

  });

  $("#b0").click(function(){
    $.ajax({
        url: 'https://api.spotify.com/v1/me/player/previous',
